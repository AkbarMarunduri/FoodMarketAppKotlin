<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:background="@drawable/shape_rectangle_8_fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPoster"
        style="@style/TextView.PoppinsNormal22sp202020"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/iv_sample_product" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.PoppinsNormal16sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Makanan  Halla" />


    <RatingBar
        android:id="@+id/rbFood"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:text="Makanan  Halal"
        android:theme="@style/RatingBar" />

</LinearLayout>