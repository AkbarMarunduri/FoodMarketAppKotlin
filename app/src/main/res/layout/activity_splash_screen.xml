<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC700"
    android:id="@+id/splahScreen"
    tools:context=".ui.splashscren.SplashScreenActivity">

    <ImageView
        android:id="@+id/image_splash"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:src="@drawable/ic_logo_apps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextView.PoppinsNormal32sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foofmatked"
        app:layout_constraintEnd_toEndOf="@+id/image_splash"
        app:layout_constraintStart_toStartOf="@id/image_splash"
        app:layout_constraintTop_toBottomOf="@+id/image_splash" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>